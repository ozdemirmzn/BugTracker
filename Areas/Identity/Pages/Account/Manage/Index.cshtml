@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center">
                <div class="col-10">
                    
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    <form id="profile-form" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Input.FirstName" class="white-smoke"></label>
                                    <input asp-for="Input.FirstName" class="form-control" />
                                    
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.LastName" class="white-smoke"></label>
                                    <input asp-for="Input.LastName" class="form-control" />
                                    
                                </div>
                                <div class="form-group">
                                    <label asp-for="Username" class="white-smoke"></label>
                                    <input asp-for="Username" class="form-control" disabled />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.PhoneNumber" class="white-smoke"></label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>

                            </div>


             <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.ProfilePicture" style="width: 100%;" class="white-smoke"></label>
                            @if (Model.Input.ProfilePicture != null)
                              {
                                 <img id="profilePicture" class="rounded" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                             }
                               else
                                {
                                 <img id="profilePicture" class="rounded" src="~/images/profile.png">
                               }
                                    @*onchange pre loads the pic to review before save*@
                              <input type="file"
                                  accept=".png,.jpg,.jpeg,.gif,.tif"
                                   asp-for="Input.ProfilePicture"
                                    class="form-control profile-pic-upload-sec white-smoke"
                                  style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                  onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                     <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
              </div>
           </div>
        </form>
    </div>
</div>
 @section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
