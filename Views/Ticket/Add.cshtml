@using BugTracker.ViewModels;
@model AddTicketViewModel;



<div class="bg-img bg-image" id="add-form-img">

    <div class="container">
        <div class="other-page-nav-padding">
            <h1 class="ext-bot-padding" id="add-ticket-header">CREATE A NEW TICKET</h1>

            <form enctype="multipart/form-data" asp-controller="Ticket" asp-action="ProcessAddTicket" method="post">
                <div class="form-group">
                    <label class="add-ticket-label">Name</label>
                    <input class="form-control" asp-for="TicketOwner" />
                    <span asp-validation-for="TicketOwner"></span>
                </div>
                <div class="form-group">
                    <label class="add-ticket-label">Ticket Description</label>
                    <textarea class="form-control" asp-for="Description" rows="4"><</textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo1">Add Screenshot or Picture (optinal)</label>
                    <div class="form-row">
                        <div class="custom-file">
                            <input asp-for="Photo1" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Photo2">Add Screenshot or Picture (optinal)</label>
                    <div class="form-row">
                        <div class="custom-file">
                            <input asp-for="Photo2" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Photo3">Add Screenshot or Picture (optinal)</label>
                    <div class="form-row">
                        <div class="custom-file">
                            <input asp-for="Photo3" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...</label>
                        </div>
                    </div>
                </div>
                <input class="btn btn-secondary" type="submit" value="Submit" />
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
    </script>
}