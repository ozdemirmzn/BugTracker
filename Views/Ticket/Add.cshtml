@using BugTracker.ViewModels;
@model AddTicketViewModel;



    <div class="bg-img bg-image" id="add-form-img">
        
        <div class="container">
            <div class="other-page-nav-padding">
                <h1 class="ext-bot-padding" id="add-ticket-header">CREATE A NEW TICKET</h1>

                <form asp-controller="Ticket" asp-action="ProcessAddTicket" method="post">
                    <div class="form-group">
                        <label class="add-ticket-label">Name</label>
                        <input class="form-control" asp-for="TicketOwner" />
                        <span asp-validation-for="TicketOwner"></span>
                    </div>
                    <div class="form-group">
                        <label class="add-ticket-label">Ticket Description</label>
                        <textarea class="form-control" asp-for="Description" rows="4"><</textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <input class="btn btn-secondary" type="submit" value="Submit" />
                </form>
            </div>
        </div>
    </div>