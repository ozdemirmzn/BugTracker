@model Ticket
@*@{
        Layout = "/Views/Shared/_Layout.cshtml";
    }*@

@{

    var photoPath1 = "~/images/" + (@Model.PhotoPath1 ?? "noimage.jpg");
    var photoPath2 = "~/images/" + (@Model.PhotoPath2 ?? "noimage.jpg");
    var photoPath3 = "~/images/" + (@Model.PhotoPath3 ?? "noimage.jpg");
}

<div class="bg-img bg-image" style="background-image: url('https://www.capcitycreative.ca/wp-content/uploads/2018/08/design-1024x576.jpg'); ">

    <div class="container">
        <div class="other-page-nav-padding">
            <div class="row justify-content-center">
                <div class="col-8">
                    <table class="table table-striped table-dark">
                        <tr class="font-weight-bold">
                            <th>Ticket Owner</th>
                            <th>Description</th>
                            <th>TicketNumber</th>
                            <th>Action</th>
                        </tr>
                        <tr>
                            <td>@Model.TicketOwner</td>
                            <td>@Model.Description</td>
                            <td>@Model.TicketNumber</td>
                            <td>
                                <a class="btn btn-success btn-sm" asp-controller="Ticket" asp-action="Delete" asp-route-id="@Model.Id">Solved</a>
                            </td>
                        </tr>

                    </table>
                    <div><img class="card-img-top" src="@photoPath1" asp-append-version="true" style="height:200px; width:auto" />
                         <img class="card-img-top" src="@photoPath2" asp-append-version="true" style="height:200px; width:auto" />
                         <img class="card-img-top" src="@photoPath3" asp-append-version="true" style="height:200px; width:auto" />
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>