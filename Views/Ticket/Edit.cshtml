@using BugTracker.ViewModels;
@model AddTicketViewModel;


<div class="bg-img bg-image fill" style="background-image: linear-gradient(to right, #b92b27, #1565c0)">
    <div class="container">
        <div class="other-page-nav-padding">
            <div class="row justify-content-center">
                <div class="col-12">
                    <h1 class="ext-bot-padding white-smoke" id="add-ticket-header">UPDATE THE TICKET INFORMATION</h1>

                    <form enctype="multipart/form-data" asp-controller="Ticket" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="@Model.Id" />

                        <div class="form-group">
                            <label class="add-ticket-label white-smoke">Ticket Description</label>
                            <textarea class="form-control" asp-for="Description" rows="4"><</textarea>
                            <span asp-validation-for="Description"></span>
                        </div>

                        <div>
                            <p style="padding-top:30px; color:yellow">*Make sure to re-upload all your pictures!!!</p>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Picture1" class="white-smoke bottom-space" style="padding-top:30px">Add Screenshot or Picture - 1 (optional)</label>
                                    <div class="form-row">
                                        <div class="custom-file">
                                            <input type="file" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Picture1" class="form-control white-smoke pic-upload-sec">
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="Picture2" class="white-smoke bottom-space" style="padding-top:30px">Add Screenshot or Picture - 2 (optional)</label>
                                        <div class="form-row">
                                            <div class="custom-file">
                                                <input type="file" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Picture2" class="form-control white-smoke pic-upload-sec">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label asp-for="Picture3" class="white-smoke bottom-space" style="padding-top:30px">Add Screenshot or Picture - 3 (optional)</label>
                                            <div class="form-row">
                                                <div class="custom-file">
                                                    <input type="file" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Picture3" class="form-control white-smoke pic-upload-sec">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                        <hr class="add-view" />



                                        <input class="btn btn-dark btn-lg" type="submit" value="Update" style="margin-top:40px" />
</form>
                </div>
            </div>
        </div>
    </div>
</div>
