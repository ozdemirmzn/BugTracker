@model List<BugTracker.ViewModels.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-img bg-image fill" style="background-image: linear-gradient(to right, #b92b27, #1565c0)">
    <div class="container">
        <div class="other-page-nav-padding">
            <div class="row justify-content-center">
                <div class="col-10">
                    <form method="post">
                        <div class="card">
                            <div class="card-header">
                                <h2>Manage User Roles</h2>
                                Add/Remove Roles for User / @ViewBag.UserName.
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="form-check m-1">
                                        <input type="hidden" asp-for="@Model[i].RoleId" />
                                        <input type="hidden" asp-for="@Model[i].RoleName" />
                                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                                        <label class="form-check-label" asp-for="@Model[i].Selected">
                                            @Model[i].RoleName
                                        </label>
                                    </div>
                                }
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="card-footer">
                                <input type="submit" value="Update" class="btn btn-primary"
                                       style="width:auto" />
                                <a asp-controller="UserRoles" asp-action="Index"
                                   class="btn btn-primary" style="width:auto">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
